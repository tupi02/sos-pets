<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/layoutRelative"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffff"
    tools:context="com.example.amandacruz.sospets.TelaLocalizarAnimal">

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/txtnome"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/txtnome"
        android:layout_marginLeft="15dp"
        android:layout_marginStart="15dp"
        android:layout_marginTop="18dp"
        android:fontFamily="sans-serif-condensed"
        android:text="Preencha os campos abaixo:"
        android:textSize="24sp" />

    <EditText
        android:id="@+id/txtnome"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="11dp"
        android:ems="10"
        android:hint="Nome:"
        android:inputType="textPersonName"
        android:lineSpacingExtra="12sp" />

    <EditText
        android:id="@+id/txtidade"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/txtnome"
        android:layout_alignStart="@+id/txtnome"
        android:layout_below="@+id/txtnome"
        android:layout_marginTop="12dp"
        android:ems="10"
        android:hint="Idade:"
        android:inputType="textPersonName"
        android:lineSpacingExtra="-9sp" />

    <EditText
        android:id="@+id/txtrua"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/txtidade"
        android:layout_alignStart="@+id/txtidade"
        android:layout_below="@+id/txtidade"
        android:layout_marginTop="18dp"
        android:ems="10"
        android:hint="Rua:"
        android:inputType="textPersonName"
        android:lineSpacingExtra="4sp" />

    <EditText
        android:id="@+id/txtnumero"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/txtrua"
        android:layout_alignBottom="@+id/txtrua"
        android:layout_toEndOf="@+id/txtrua"
        android:layout_toRightOf="@+id/txtrua"
        android:ems="10"
        android:hint="Nº"
        android:inputType="textPersonName"
        android:lineSpacingExtra="-14sp" />

    <EditText
        android:id="@+id/txtbairro"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/txtrua"
        android:layout_alignStart="@+id/txtrua"
        android:layout_below="@+id/txtrua"
        android:layout_marginTop="17dp"
        android:ems="10"
        android:hint="Bairro:"
        android:inputType="textPersonName"
        android:lineSpacingExtra="12sp" />

    <EditText
        android:id="@+id/txtreferencia"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/txtbairro"
        android:layout_alignStart="@+id/txtbairro"
        android:layout_below="@+id/txtbairro"
        android:layout_marginTop="12dp"
        android:ems="10"
        android:hint="Ponto de Referência:"
        android:inputType="textPersonName"
        android:lineSpacingExtra="12sp" />

    <EditText
        android:id="@+id/txtestado"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/imageView2"
        android:layout_alignLeft="@+id/txtreferencia"
        android:layout_alignStart="@+id/txtreferencia"
        android:layout_marginBottom="13dp"
        android:ems="10"
        android:hint="Estado do Animal:"
        android:inputType="textPersonName"
        android:lineSpacingExtra="12sp" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/btnenviar"
        android:layout_alignLeft="@+id/txtestado"
        android:layout_alignStart="@+id/txtestado"
        app:srcCompat="@drawable/pegadaa" />

    <ImageView
        android:id="@+id/imageView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/textView"
        android:layout_alignEnd="@+id/txtnome"
        android:layout_alignRight="@+id/txtnome"
        app:srcCompat="@drawable/pegadaaaa" />

    <TextView
        android:id="@+id/btnenviar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="19dp"
        android:layout_marginLeft="22dp"
        android:layout_marginStart="22dp"
        android:layout_toEndOf="@+id/imageView5"
        android:layout_toRightOf="@+id/imageView5"
        android:fontFamily="sans-serif-condensed"
        android:text="Enviar"
        android:textColor="@android:color/background_dark"
        android:textSize="24sp"
        android:textStyle="bold" />

    <ImageView
        android:id="@+id/imageView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/btnenviar"
        android:layout_marginLeft="80dp"
        android:layout_marginStart="80dp"
        android:layout_toEndOf="@+id/imageView2"
        android:layout_toRightOf="@+id/imageView2"
        app:srcCompat="@drawable/patacriaaar" />

    <EditText
        android:id="@+id/txtcaracteristica"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/txtestado"
        android:layout_alignStart="@+id/txtestado"
        android:layout_below="@+id/txtreferencia"
        android:layout_marginTop="11dp"
        android:ems="10"
        android:hint="Característica do Animal"
        android:inputType="textPersonName"
        android:lineSpacingExtra="12sp" />

</RelativeLayout>
